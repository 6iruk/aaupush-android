<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <padding
                android:bottom="8dp"
                android:top="8dp"
                android:left="8dp"
                android:right="8dp"
                />
            <solid android:color="#84504f4f" />
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <padding
                android:bottom="8dp"
                android:top="8dp"
                android:left="8dp"
                android:right="8dp"
                />
            <solid android:color="#76504f4f" />
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <item >
        <shape>
            <padding
                android:bottom="8dp"
                android:top="8dp"
                android:left="8dp"
                android:right="8dp"
                />
            <solid android:color="#75919090"></solid>
            <corners android:radius="16dp"/>
        </shape>
    </item>


</selector>