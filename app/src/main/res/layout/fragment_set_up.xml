<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.aaupush.aaupush.FirstRunSetUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_study_field"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/studyFieldSpinner"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/year_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT YEAR"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/year_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/year_option_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:button="@null"
                    android:background="@drawable/toggle_background"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#b9ffffff"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/year_option_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:button="@null"
                    android:background="@drawable/toggle_background"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#b9ffffff"
                    android:text="2" />

                <RadioButton
                    android:id="@+id/year_option_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:button="@null"
                    android:background="@drawable/toggle_background"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#b9ffffff"
                    android:text="3" />

                <RadioButton
                    android:id="@+id/year_option_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:button="@null"
                    android:background="@drawable/toggle_background"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#b9ffffff"
                    android:text="4" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/section_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT SECTION"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/section_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/section_toggle_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:button="@null"
                    android:background="@drawable/toggle_background"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#b9ffffff"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/section_toggle_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:button="@null"
                    android:background="@drawable/toggle_background"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#b9ffffff"
                    android:text="2" />

                <RadioButton
                    android:id="@+id/section_toggle_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:button="@null"
                    android:background="@drawable/toggle_background"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#b9ffffff"
                    android:text="3" />

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:background="@drawable/toggle_background"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:textColor="#b9ffffff"
            android:visibility="gone"
            android:text="NEXT"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_foreground"
        android:background="#82000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
